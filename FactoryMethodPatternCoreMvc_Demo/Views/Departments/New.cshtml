@model FactoryMethodPatternCoreMvc_Demo.Models.Department

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h4 class="text-uppercase">Add new Department</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="New">
                    <div class="form-group">
                        <label asp-for="DepartmentName" class="control-label"></label>
                        <input asp-for="DepartmentName" class="form-control" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-primary btn-primary rounded-0" />
                        <a asp-action="Index" class="btn btn-sm btn-primary btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

