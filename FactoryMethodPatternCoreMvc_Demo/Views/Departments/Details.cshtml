@model FactoryMethodPatternCoreMvc_Demo.Models.Department

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h4 class="text-uppercase">Department Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.DepartmentName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.DepartmentName)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0">Edit</a>
            <input type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0" />
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </div>
    </div>
</div>